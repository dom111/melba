{
  "name": "melba-toast",
  "description": "Lightweight VanillaJS toast library.",
  "version": "1.0.1",
  "main": "dist/cjs/Melba.js",
  "module": "dist/esm/Melba.js",
  "style": "dist/css/Melba-min.css",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:dom111/melba.git"
  },
  "keywords": [
    "toast",
    "lightweight",
    "vanillajs"
  ],
  "author": "Dom Hastings",
  "license": "MIT",
  "scripts": {
    "build": "npm run lint && npm run build:css && npm run build:cjs && npm run build:esm",
    "build:esm": "cross-env BABEL_ENV=esm babel src --out-dir dist/esm/ --ignore \"src/**/*.test.js\"",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --out-dir dist/cjs/ --ignore \"src/**/*.test.js\"",
    "build:css": "node-sass --output-style=compressed src/Melba.scss -o dist/css/",
    "lint": "eslint src && stylelint src",
    "lint:fix": "eslint src --fix && stylelint src --fix"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.3",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-private-methods": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-flow": "^7.0.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.3",
    "babel-preset-minify": "^0.5.1",
    "cross-env": "^6.0.3",
    "eslint": "^6.5.1",
    "node-sass": "^4.12.0",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-scss": "^3.12.1",
    "terser": "^4.3.8"
  },
  "dependencies": {
    "@babel/runtime": "^7.6.3"
  }
}
